<body id="admin_form">
    <form method="post" action="/login">
        <h2>Admin Form</h2>
        <input type="hidden" name="_csurf" value="<%= csurfToken %>">

        <div class="form-groups">
            <div class="form-group">
                <label for="email">Email</label>
                <input autocomplete="email" required placeholder="Inserisci l'email" type="email" name="email"
                    id="email">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <div class="eye_div">
                    <input autocomplete="current-password" required placeholder="Inserisci la password.."
                        type="password" name="password" id="password">
                    <img class="eyeClosed" src="/Icons/eyeClosed.svg">
                    <img class="eyeOpened" src="/Icons/eye.svg">
                </div>
            </div>
        </div>

        <button type="submit">Entra</button>
    </form>

    <script src="/clientSideScripts/showPassword.js"></script>
</body>